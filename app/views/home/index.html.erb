<div class="container">
  <div class="row">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <h3>Welcome back, <%= Current.user.name %>!</h3>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-md-6">
              <h5>Quick Actions</h5>
              <%= link_to "Add Expense", new_expense_path, class: "btn btn-primary mb-2 d-block" %>
              <%= link_to "View All Expenses", expenses_path, class: "btn btn-outline-primary mb-2 d-block" %>
              <%= link_to "Check Balances", balances_path, class: "btn btn-outline-secondary d-block" %>
            </div>
            <div class="col-md-6">
              <h5>Your Balance</h5>
              <p class="<%= Current.user.net_balance >= 0 ? 'text-success' : 'text-danger' %>">
                <strong>$<%= Current.user.net_balance %></strong>
              </p>
              <small class="text-muted">
                <% if Current.user.net_balance > 0 %>
                  You are owed money
                <% elsif Current.user.net_balance < 0 %>
                  You owe money
                <% else %>
                  All settled up!
                <% end %>
              </small>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>